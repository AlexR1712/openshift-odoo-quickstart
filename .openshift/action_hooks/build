#!/bin/bash

ODOO_VERSION=8.0
ODOO_TIMESTAMP=20140517-231234
ODOO_URL=http://nightly.odoo.com/$ODOO_VERSION/nightly/src/odoo-${ODOO_VERSION}-${ODOO_TIMESTAMP}.tar.gz

cd $OPENSHIFT_DATA_DIR/

if [ -d "odoo-${ODOO_VERSION}-${ODOO_TIMESTAMP}" ]; then
	echo "OpenERP already downloaded."
	exit 0
fi

echo "OpenERP will be downloaded now."
wget $ODOO_URL

tar xzf odoo-${ODOO_VERSION}-${ODOO_TIMESTAMP}.tar.gz

cd $OPENSHIFT_REPO_DIR/wsgi/
ln -s $OPENSHIFT_DATA_DIR/odoo-${ODOO_VERSION}-${ODOO_TIMESTAMP} odoo
